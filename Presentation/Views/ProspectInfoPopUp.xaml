<Window
    x:Class="Presentation.Views.ProspectInfoPopUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:Presentation.ViewModels"
    Title="Utfall av kundprospekt"
    Width="375"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Verdana"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <materialDesign:Snackbar
            x:Name="SnackbarOne"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            IsActive="{Binding IsSnackbarActive}"
            Message="{Binding SnackbarMessage}"
            Background="#EDEDED"
            Foreground="Black"
            Margin="10" />
        <Border
            Background="White"
            BorderBrush="Indigo"
            BorderThickness="2"
            CornerRadius="20"
            Width="350"
            Height="180"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock
                    Margin="0,30,0,10"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Utfall kundprospekt" />
                <StackPanel Width="300" Margin="0,10,0,0" HorizontalAlignment="Center">
                    <TextBox
                        Width="240"
                        Height="35"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center"
                        materialDesign:HintAssist.Hint="Kommentera..."
                        materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                         Foreground="Black" 
                        BorderBrush="Black"
                        FontSize="14"
                        Padding="5"
                        Text="{Binding Note, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <StackPanel Margin="0,10,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button
                            Width="100"
                            Command="{Binding CancelCommand}"
                            Content="Avbryt"
                            Style="{StaticResource MaterialDesignFlatButton}" />
                        <Button
                            Margin="20,0,0,0"
                            Command="{Binding SaveCommand}"
                            Content="Spara"
                            Style="{StaticResource MaterialDesignRaisedButton}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
