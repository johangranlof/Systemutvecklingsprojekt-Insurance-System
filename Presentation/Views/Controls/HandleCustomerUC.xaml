<UserControl
    x:Class="Presentation.Views.Controls.HandleCustomerUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Presentation.Helpers"
    xmlns:local="clr-namespace:Presentation.Views.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1150"
    mc:Ignorable="d">
    <UserControl.Resources>
        <helpers:BoolToStringConverter x:Key="BoolToStringConverter" />
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helpers:BooleanToYesNoConverter x:Key="BooleanToYesNoConverter" />
    </UserControl.Resources>
    <Grid Margin="5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Left"
            FontSize="24"
            FontWeight="Bold"><Run Text="Kund" /><Run Language="sv-se" Text="register" /></TextBlock>
        <Button
            Grid.Row="0"
            HorizontalAlignment="Right"
            Command="{Binding AddBusinessCustomerCommand}"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Visibility="{Binding SellerFunctions, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="BriefcasePlus" />
                <TextBlock Margin="10,0,0,0" Text="Lägg till företagskund" />
            </StackPanel>
        </Button>
        <Button
            Grid.Row="0"
            Margin="0,0,197,0"
            HorizontalAlignment="Right"
            Command="{Binding AddPrivateCustomerCommand}"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Visibility="{Binding SellerFunctions, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="AccountPlus" />
                <TextBlock Margin="10,0,0,0" Text="Lägg till privatkund" />
            </StackPanel>
        </Button>
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <RadioButton
                Content="Alla"
                Cursor="Hand"
                GroupName="Group1"
                IsChecked="{Binding SelectedFilter, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Alla'}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
            <RadioButton
                Margin="20,0,0,0"
                Content="Företag"
                Cursor="Hand"
                GroupName="Group1"
                IsChecked="{Binding SelectedFilter, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Företag'}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
            <RadioButton
                Margin="20,0,0,0"
                Content="Privat"
                Cursor="Hand"
                GroupName="Group1"
                IsChecked="{Binding SelectedFilter, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Privat'}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <CheckBox
                x:Name="Prospect"
                Margin="0,0,0,0"
                Content="Endast kundprospekt"
                IsChecked="{Binding ShowProspectsOnly, Mode=TwoWay}"
                Visibility="{Binding SellerFunctions, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                Width="350"
                materialDesign:TextFieldAssist.HasLeadingIcon="True"
                materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding CustomerSearchTerm, UpdateSourceTrigger=PropertyChanged}">
                <materialDesign:HintAssist.Hint>Sök...</materialDesign:HintAssist.Hint>
            </TextBox>
        </StackPanel>
        <DataGrid
            Grid.Row="4"
            Margin="0,10,0,0"
            AutoGenerateColumns="False"
            Background="White"
            BorderBrush="LightGray"
            BorderThickness="1"
            CanUserAddRows="False"
            FontSize="12"
            GridLinesVisibility="Horizontal"
            HorizontalGridLinesBrush="LightGray"
            ItemsSource="{Binding Customers}"
            RowHeight="40"
            SelectedItem="{Binding SelectedCustomer}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Type}"
                    Header="Kundtyp"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding OrgSSN}"
                    Header="Person-/org.nr"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Kund"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="120" Header="Kundprospekt">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center" Text="{Binding IsProspect, Converter={StaticResource BooleanToYesNoConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="100" Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Cursor="Hand">
                                <Hyperlink
                                    Command="{Binding DataContext.ViewCustomerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Foreground="#2F4156"
                                    Style="{StaticResource MaterialDesignCaptionHyperlink}">
                                    Visa mer →
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
