<UserControl
    x:Class="Presentation.Views.Controls.AddUserUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Presentation.Views.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Presentation.ViewModels"
    d:DesignHeight="800"
    d:DesignWidth="1150"
    Foreground="Black"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="15,15,0,0">
            <Hyperlink Command="{Binding BackCommand}" Style="{StaticResource MaterialDesignBody2Hyperlink}">
                ← Återgå
            </Hyperlink>
        </TextBlock>
        <materialDesign:Snackbar
            x:Name="SnackbarOne"
            Grid.Row="1"
            VerticalAlignment="Top"
            Panel.ZIndex="100"
            Background="#EDEDED"
            Foreground="Black"
            IsActive="{Binding IsSnackbarActive}"
            Message="{Binding SnackbarMessage}" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,30"
                FontSize="20"
                FontWeight="Bold"
                Text="Lägg till användare"
                TextAlignment="Center" />
            <StackPanel Margin="15,0,5,25" Orientation="Horizontal">
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Anställningsnummer" />
                    <ComboBox
                        Width="250"
                        ItemsSource="{Binding EmploymentNumbers}"
                        SelectedItem="{Binding SelectedEmploymentNumber, ValidatesOnDataErrors=True}"
                        Style="{StaticResource MaterialDesignFilledComboBox}" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Behörighet" />
                    <ComboBox
                        Width="250"
                        VerticalAlignment="Top"
                        ItemsSource="{Binding Permissions}"
                        SelectedItem="{Binding SelectedPermission, ValidatesOnDataErrors=True}"
                        Style="{StaticResource MaterialDesignFilledComboBox}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="15,0,5,25" Orientation="Horizontal">
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Användarnamn" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding Username, ValidatesOnDataErrors=True}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Lösenord" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding Password, ValidatesOnDataErrors=True}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Lösenord" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding PasswordTwo, ValidatesOnDataErrors=True}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
            <StackPanel
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="Auto"
                    Command="{Binding SaveUserCommand}"
                    Content="Spara"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
