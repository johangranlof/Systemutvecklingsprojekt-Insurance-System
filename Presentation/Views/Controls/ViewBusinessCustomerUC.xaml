<UserControl
    x:Class="Presentation.Views.Controls.ViewBusinessCustomerUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Presentation.Helpers"
    xmlns:local="clr-namespace:Presentation.Views.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1150"
    mc:Ignorable="d">

    <UserControl.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="15,15,0,0">
            <Hyperlink Command="{Binding BackCommand}" Style="{StaticResource MaterialDesignBody2Hyperlink}">
                ← Återgå
            </Hyperlink>
        </TextBlock>
        <materialDesign:Snackbar
            x:Name="SnackbarOne"
            Grid.Row="1"
            VerticalAlignment="Top"
            Panel.ZIndex="100"
            Background="#EDEDED"
            Foreground="Black"
            IsActive="{Binding IsSnackbarActive}"
            Message="{Binding SnackbarMessage}" />
        <Grid Grid.Row="2" Margin="30,0,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Margin="10">
                <StackPanel
                    Margin="0,0,0,10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        Command="{Binding RemovePopUpCommand}"
                        CommandParameter="{Binding BusinessCustomer}"
                        IsEnabled="{Binding removeActive}"
                        Style="{StaticResource MaterialDesignPaperDarkButton}"
                        ToolTip="Kund med aktiv försäkring går ej att ta bort"
                        ToolTipService.ShowOnDisabled="True"
                        Visibility="{Binding SellerFunctions, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="TrashCanOutline" />
                            <TextBlock Margin="10,0,0,0" Text="Ta bort" />
                        </StackPanel>
                    </Button>
                    <CheckBox
                        x:Name="EditBCustomer"
                        HorizontalAlignment="Right"
                        Command="{Binding EditCustomerCommand}"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                        Visibility="{Binding SellerFunctions, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="BriefcaseEdit" />
                            <TextBlock Margin="10,0,0,0" Text="Redigera" />
                        </StackPanel>
                    </CheckBox>
                </StackPanel>
                <Separator Margin="0,10,0,10" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Företagskund" />
                <Grid Margin="10,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Margin="0,0,5,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Kundnamn" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Top"
                            AcceptsReturn="True"
                            IsEnabled="{Binding Path=IsChecked, ElementName=EditBCustomer}"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            Text="{Binding CompanyName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Organisationsnummer" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Top"
                            AcceptsReturn="True"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            Text="{Binding BusinessCustomer.OrganisationNumber}"
                            TextWrapping="Wrap"
                            ToolTip="Går ej att redigera"
                            ToolTipService.ShowOnDisabled="True" />
                    </StackPanel>
                </Grid>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Adress" />
                <Grid Margin="10,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Margin="0,0,5,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Gatuadress" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Top"
                            AcceptsReturn="True"
                            IsEnabled="{Binding Path=IsChecked, ElementName=EditBCustomer}"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            Text="{Binding StreetAddress, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Postnummer" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Top"
                            AcceptsReturn="True"
                            IsEnabled="{Binding Path=IsChecked, ElementName=EditBCustomer}"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            Text="{Binding ZipCode, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Ort" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Top"
                            AcceptsReturn="True"
                            IsEnabled="{Binding Path=IsChecked, ElementName=EditBCustomer}"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            Text="{Binding City, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Övrig kontakt" />
                <Grid Margin="10,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Margin="0,0,5,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Riktnummer" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Top"
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.LeadingIcon="Phone"
                            AcceptsReturn="True"
                            IsEnabled="{Binding Path=IsChecked, ElementName=EditBCustomer}"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            Text="{Binding AreaCode, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Telefonnummer" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Top"
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.LeadingIcon="Phone"
                            AcceptsReturn="True"
                            IsEnabled="{Binding Path=IsChecked, ElementName=EditBCustomer}"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            Text="{Binding PhoneNumber, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Mejl" />
                        <TextBox
                            Width="250"
                            VerticalAlignment="Top"
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.LeadingIcon="Email"
                            AcceptsReturn="True"
                            IsEnabled="{Binding Path=IsChecked, ElementName=EditBCustomer}"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            Text="{Binding Email, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
                <StackPanel Margin="0,20,0,0" HorizontalAlignment="Right">
                    <Button
                        Width="100"
                        Command="{Binding UpdateBusinesscustomerCommand}"
                        Content="Spara"
                        IsEnabled="{Binding Path=IsChecked, ElementName=EditBCustomer}"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" />
                </StackPanel>
            </StackPanel>
            <Grid Grid.Row="1">
                <Expander Height="auto" FontWeight="Bold" IsExpanded="True">
                    <Expander.Header>
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                            <Button
                                 Width="30"
                                 Height="30"
                                 Margin="0,0,10,0"
                                 HorizontalAlignment="Right"
                                 Cursor="Hand"
                                 Command="{Binding DataContext.HandleProspectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 CommandParameter="{Binding}"
                                 IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType=Window}}"
                                 Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}"
                                 ToolTip="Lägg till notering för prospekt">
                                        <materialDesign:PackIcon Kind="NotePlusOutline" />
                                        </Button>
                                        <TextBlock
                                             Margin="10,0,0,0"
                                             VerticalAlignment="Center"
                                             Text="Prospektinformation" />
                        </StackPanel>
                    </Expander.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <DataGrid 
                                AutoGenerateColumns="False" 
                                ItemsSource="{Binding BusinessCustomer.CustomerProspectInformation}" 
                                CanUserAddRows="False" 
                                CanUserDeleteRows="False" 
                                IsReadOnly="True"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Grid.Row="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Kontaktdatum" Binding="{Binding ContactDate, StringFormat=\{0:yyyy-MM-dd\}}" />
                                    <DataGridTextColumn Header="Säljare" Binding="{Binding FullName}" />
                                    <DataGridTextColumn Header="Agenturnummer" Binding="{Binding AgentNumber}" />
                                    <DataGridTextColumn Header="Utfall" Binding="{Binding Outcome}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                    </Grid>
                </Expander>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
