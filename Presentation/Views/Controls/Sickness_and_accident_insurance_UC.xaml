<UserControl
    x:Class="Presentation.Views.Controls.Sickness_and_accident_insurance_UC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Presentation.Helpers"
    xmlns:local="clr-namespace:Presentation.Views.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1150"
    mc:Ignorable="d">
    <UserControl.Resources>
        <helpers:IntToCurrencyStringConverter x:Key="IntToCurrencyStringConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="15,15,0,0">
            <Hyperlink Command="{Binding BackCommand}" Style="{StaticResource MaterialDesignBody2Hyperlink}">
                ← Återgå
            </Hyperlink>
        </TextBlock>
        <materialDesign:Snackbar
            x:Name="SnackbarOne"
            Grid.Row="1"
            VerticalAlignment="Top"
            Panel.ZIndex="100"
            Background="#EDEDED"
            Foreground="Black"
            IsActive="{Binding IsSnackbarActive}"
            Message="{Binding ValidationError}" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <StackPanel Margin="0,0,0,40">
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Fyll i Försäkringsuppgifter" />
                <TextBlock
                    FontSize="16"
                    FontStyle="Italic"
                    Text="för Sjuk- och olycksfallsförsäkring vuxen" />
            </StackPanel>
            <StackPanel
                Margin="15,0,5,25"
                VerticalAlignment="Stretch"
                Orientation="Horizontal">
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Försäkringstagare" />
                    <ComboBox
                        Width="250"
                        Margin="0,0,0,15"
                        ItemsSource="{Binding PrivateCustomerName}"
                        SelectedItem="{Binding SelectedPrivateCustomerName, ValidatesOnDataErrors=True}"
                        Style="{StaticResource MaterialDesignFilledComboBox}" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Betalningsperiod" />
                    <ComboBox
                        Width="250"
                        Margin="0,0,0,15"
                        DisplayMemberPath="Type"
                        ItemsSource="{Binding PaymentPlans}"
                        SelectedItem="{Binding SelectedPaymentPlan, ValidatesOnDataErrors=True}"
                        Style="{StaticResource MaterialDesignFilledComboBox}" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock TextWrapping="Wrap">
                        <Run
                            FontSize="12"
                            FontWeight="Bold"
                            Text="Grundbelopp" />
                    </TextBlock>
                    <ComboBox
                        Width="250"
                        Margin="0,0,0,15"
                        ItemsSource="{Binding InsuranceAmounts}"
                        SelectedItem="{Binding SelectedInsuranceAmount, ValidatesOnDataErrors=True}"
                        Style="{StaticResource MaterialDesignFilledComboBox}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource IntToCurrencyStringConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="15,0,5,5" Orientation="Horizontal">
                <Border
                    Width="5"
                    Height="Auto"
                    Background="#FF283593"
                    CornerRadius="2,2,2,2" />
                <TextBlock
                    Margin="10,0,0,0"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Tillägg (valbar)" />
            </StackPanel>
            <StackPanel
                Margin="15,0,5,25"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Orientation="Horizontal">
                <materialDesign:Card
                    Width="350"
                    Margin="0,0,60,0"
                    Padding="4"
                    Background="{DynamicResource PrimaryHueDarkBrush}"
                    BorderThickness="1"
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    UniformCornerRadius="6">
                    <StackPanel
                        Margin="0,0,5,0"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                        <CheckBox
                            x:Name="LongSicknesChosen"
                            Margin="10,0,10,10"
                            materialDesign:CheckBoxAssist.CheckBoxSize="30"
                            Content="Månadsersättning vid långvarig sjukskrivning"
                            FontWeight="Bold"
                            IsChecked="{Binding IsLongSicknessChosen, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignDarkCheckBox}" />
                        <Separator />
                        <TextBlock
                            Width="250"
                            FontWeight="Bold"
                            Text="Grundbelopp" />
                        <ComboBox
                            Width="250"
                            Margin="0,0,0,15"
                            IsEnabled="{Binding Path=IsChecked, ElementName=LongSicknessChosen}"
                            ItemsSource="{Binding LongTermSicknessAmounts}"
                            SelectedItem="{Binding SelectedLongTermSicknessAmount, Mode=TwoWay, ValidatesOnDataErrors=True}"
                            Style="{StaticResource MaterialDesignFilledComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource IntToCurrencyStringConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card
                    Width="350"
                    Padding="4"
                    Background="{DynamicResource PrimaryHueDarkBrush}"
                    BorderThickness="1"
                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                    UniformCornerRadius="6">
                    <StackPanel
                        Margin="0,0,5,0"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                        <CheckBox
                            x:Name="InvalidityChosen"
                            Margin="10,0,10,10"
                            materialDesign:CheckBoxAssist.CheckBoxSize="30"
                            Content="Invaliditet vid olycksfall"
                            FontWeight="Bold"
                            IsChecked="{Binding IsInvalidityChosen, Mode=TwoWay}"
                            Style="{StaticResource MaterialDesignDarkCheckBox}" />
                        <Separator />
                        <TextBlock
                            Width="250"
                            FontWeight="Bold"
                            Text="Grundbelopp" />
                        <ComboBox
                            Width="250"
                            Margin="0,0,0,15"
                            IsEnabled="{Binding Path=IsChecked, ElementName=InvalidityChosen}"
                            ItemsSource="{Binding AccidentDisabilityAmounts}"
                            SelectedItem="{Binding SelectedAccidentDisabilityAmount, Mode=TwoWay, ValidatesOnDataErrors=True}"
                            Style="{StaticResource MaterialDesignFilledComboBox}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource IntToCurrencyStringConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
            <StackPanel Margin="15,0,5,25" Orientation="Horizontal">
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Eventuell anteckning:" />
                    <TextBox
                        Width="505"
                        Height="70"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding Notes, Mode=TwoWay}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </StackPanel>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="auto"
                    Command="{Binding SaveCommand}"
                    Content="Spara"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
