<UserControl
    x:Class="Presentation.Views.Controls.HandleInsurancesUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Presentation.Helpers"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1150"
    mc:Ignorable="d">

    <UserControl.Resources>
        <helpers:BoolToStringConverter x:Key="BoolToStringConverter" />
    </UserControl.Resources>
    <Grid Margin="5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Left"
            FontSize="24"
            FontWeight="Bold"
            Text="Försäkringsregister" />
        <Button
            Grid.Row="0"
            HorizontalAlignment="Right"
            Command="{Binding CreateInvoiceFileCommand}"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Visibility="{Binding CreateInvoiceFileButton, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="FileDocumentPlus" />
                <TextBlock Margin="10,0,0,0" Text="Skapa fakturafil" />
            </StackPanel>
        </Button>
        <Button
            Grid.Row="0"
            Margin="0,0,0,0"
            HorizontalAlignment="Right"
            Command="{Binding CreateInsuranceOfferCommand}"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Visibility="{Binding CreateInsuranceOfferButton, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon VerticalAlignment="Center" Kind="FileDocumentPlus" />
                <TextBlock Margin="10,0,0,0" Text="Skapa Försäkringserbjudande" />
            </StackPanel>
        </Button>
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <RadioButton
                Content="Alla"
                Cursor="Hand"
                GroupName="Group1"
                IsChecked="{Binding SelectedFilter, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Alla'}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
            <RadioButton
                Margin="20,0,0,0"
                Content="Företag"
                Cursor="Hand"
                GroupName="Group1"
                IsChecked="{Binding SelectedFilter, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Företag'}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
            <RadioButton
                Margin="20,0,0,0"
                Content="Privat"
                Cursor="Hand"
                GroupName="Group1"
                IsChecked="{Binding SelectedFilter, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Privat'}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                Width="350"
                materialDesign:TextFieldAssist.HasLeadingIcon="True"
                materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding InsuranceSearchTerm, UpdateSourceTrigger=PropertyChanged}">
                <materialDesign:HintAssist.Hint>Sök...</materialDesign:HintAssist.Hint>
            </TextBox>
        </StackPanel>
        <DataGrid
            Grid.Row="3"
            Margin="0,10,0,0"
            AutoGenerateColumns="False"
            Background="White"
            BorderBrush="LightGray"
            BorderThickness="1"
            CanUserAddRows="False"
            FontSize="12"
            GridLinesVisibility="Horizontal"
            HorizontalGridLinesBrush="LightGray"
            ItemsSource="{Binding Insurances}"
            RowHeight="40"
            SelectedItem="{Binding SelectedInsurance}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding InsuranceNumber}"
                    Header="Försäkringsnummer"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding OrgSSN}"
                    Header="Person-/org.nr"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CustomerName}"
                    Header="Kund"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Insured}"
                    Header="Försäkrad"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding InsuranceType}"
                    Header="Försäkringstyp"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AgentNumber}"
                    Header="Agenturnummer"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn
                    Width="*"
                    Header="Status"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Border
                                    Width="Auto"
                                    HorizontalAlignment="Left"
                                    Background="#EEFBF6"
                                    BorderBrush="#C0F8E3"
                                    BorderThickness="2"
                                    CornerRadius="10,10,10,10">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Aktiv">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock
                                        Margin="5,2,5,2"
                                        Foreground="#107A54"
                                        Text="{Binding Status}" />
                                </Border>
                                <Border
                                    Width="Auto"
                                    HorizontalAlignment="Left"
                                    Background="#FBF8EE"
                                    BorderBrush="#F8E9C0"
                                    BorderThickness="2"
                                    CornerRadius="10,10,10,10">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Förfrågan">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="5,2,5,2"
                                            Foreground="#FFBC00"
                                            Text="{Binding Status}" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="100" Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Cursor="Hand">
                                <Hyperlink
                                    Command="{Binding DataContext.ViewInsuranceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Foreground="#2F4156"
                                    Style="{StaticResource MaterialDesignCaptionHyperlink}">
                                    Visa mer →
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
