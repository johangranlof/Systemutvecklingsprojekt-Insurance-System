<UserControl
    x:Class="Presentation.Views.Controls.HandleUserUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Presentation.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1150"
    Background="White"
    mc:Ignorable="d">
    <GroupBox
        Width="Auto"
        Padding="20"
        VerticalAlignment="Stretch"
        FontSize="16">
        <Grid Margin="5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Left"
                FontSize="24"
                FontWeight="Bold"
                Text="Användareregister" />
            <Button
                Grid.Row="0"
                Width="200"
                Height="40"
                HorizontalAlignment="Right"
                Command="{Binding AddUserViewCommand}"
                Content="Lägg till användare"
                FontSize="16" />
            <DataGrid
                Grid.Row="1"
                Margin="0,10,0,0"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                FontSize="18"
                ItemsSource="{Binding Users}"
                RowHeight="40">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding EmployeeNumber}"
                        Header="Anställningsnummer"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Username}"
                        Header="Användarnamn" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Password}"
                        Header="Lösenord" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Permission}"
                        Header="Behörighet som en"
                        IsReadOnly="True" />
                    <DataGridTemplateColumn Width="100" Header="Ta bort">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Width="80"
                                    Height="30"
                                    Command="{Binding DataContext.RemoveUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Ta bort" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </GroupBox>
</UserControl>
