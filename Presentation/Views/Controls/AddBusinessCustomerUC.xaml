<UserControl
    x:Class="Presentation.Views.Controls.AddBusinessCustomerUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Presentation.Views.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1150"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Margin="15,15,0,0">
            <Hyperlink Command="{Binding BackCommand}" Style="{StaticResource MaterialDesignBody2Hyperlink}">
                ← Återgå
            </Hyperlink>
        </TextBlock>

        <materialDesign:Snackbar
            x:Name="SnackbarOne"
            Grid.Row="1"
            VerticalAlignment="Top"
            Panel.ZIndex="100"
            Background="#EDEDED"
            Foreground="Black"
            IsActive="{Binding IsSnackbarActive}"
            Message="{Binding ValidationError}" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,25"
                FontSize="20"
                FontWeight="Bold"
                Text="Lägg till företagskund"
                TextAlignment="Center" />
            <StackPanel
                Margin="15,10,5,25"
                VerticalAlignment="Stretch"
                Orientation="Horizontal">
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Företagsnamn" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding CompanyName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Organisationsnummer" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding OrganisationNumber, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
            <TextBlock
                Margin="0,20,0,15"
                FontSize="14"
                FontWeight="Bold"
                Text="Adress" />

            <StackPanel Margin="15,0,5,25" Orientation="Horizontal">
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Gatuadress" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding StreetAddress, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Postnummer" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding ZipCode, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Ort" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding City, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
            <TextBlock
                Margin="0,20,0,15"
                FontSize="14"
                FontWeight="Bold"
                Text="Övrig kontakt" />
            <StackPanel Margin="15,0,5,25" Orientation="Horizontal">
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Riktnummer" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="Phone"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding AreaCode, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Telefonnummer" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="Phone"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding PhoneNumber, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock FontWeight="Bold" Text="Mejl (ej obligatorisk)" />
                    <TextBox
                        Width="250"
                        VerticalAlignment="Top"
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="Email"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        Text="{Binding Email, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
            <StackPanel
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="auto"
                    Command="{Binding SaveCommand}"
                    Content="Spara"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
