<Window
    x:Class="Presentation.Views.SelectStartDatePopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:Presentation.ViewModels"
    Title="Välj startdatum för försäkringen"
    Width="375"
    Height="275"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Verdana"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Border
        Background="white"
        BorderThickness="0"
        CornerRadius="20,20,20,20">
        <StackPanel>
            <TextBlock
                Margin="0,40,0,0"
                HorizontalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="Välj startdatum för försäkringen" />
            <TextBlock
                Width="300"
                Margin="10,10,10,40"
                FontSize="12"
                Text="Förfallodatum för försäkringen sätts automatiskt till 1 år efter startdatum."
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <DatePicker
                    Width="220"
                    HorizontalAlignment="Center"
                    materialDesign:HintAssist.Hint="Välj startdatum..."
                    SelectedDate="{Binding PickedDate}"
                    Style="{StaticResource MaterialDesignFilledDatePicker}"
                    ToolTip="Välj startdatum för försäkringen" />
                <StackPanel
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Command="{Binding CancelCommand}"
                        Content="Avbryt"
                        Style="{StaticResource MaterialDesignPaperDarkButton}" />
                    <Button
                        Width="100"
                        Margin="20,0,0,0"
                        Command="{Binding ConfirmCommand}"
                        Content="Spara"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
